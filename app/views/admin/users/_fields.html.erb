<%= f.label :name %>
<%= f.text_field :name, class: 'form-control' %>

<%= f.label :email %>
<%= f.email_field :email, class: 'form-control' %>

<%= f.label :password %>
<%= f.password_field :password, class: 'form-control' %>

<%= f.label :Change_avartar %>
<div class="gravatar_edit">
  <% if @user.avatar_url.nil? %>
    <%= image_tag "https://secure.gravatar.com/avatar/1?s=50" %>
  <% else %>
    <%= image_tag @user.avatar.thumbnail.url %>
  <% end %>
  <%= f.file_field :avatar, type: :file %>
</div>

<%= f.label :admin, class: "checkbox inline" do %>
  <%= f.check_box :admin %>
  <span>Admin</span>
<% end %>
