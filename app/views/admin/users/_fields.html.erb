<%= f.label :name %>
<%= f.text_field :name, class: 'form-control' %>

<%= f.label :email %>
<%= f.email_field :email, class: 'form-control' %>

<%= f.label :password %>
<%= f.password_field :password, class: 'form-control' %>

<%= f.label :admin, class: "checkbox inline" do %>
  <%= f.check_box :admin %>
  <span>Admin</span>
<% end %>
